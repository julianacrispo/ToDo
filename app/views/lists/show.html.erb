<h3> Lists Show </h3>  <%= link_to "Edit", edit_list_path, class: 'btn btn-success' %>
<%= link_to "Delete", [@list], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>

<div class= "jumbotron">

<br>
<p><b> <%= @list.name %></b></p> 

<p> <%= @list.description %></p>

<%= form_for [@list, @item] do |f| %>
    
        <%= f.text_field :description, placeholder: "Add Items to List Here" %>
      <%= f.submit "Add", class: 'btn btn-success' %>
    <% end %>

    <%= @list.items.count %> items todo
  
<div class="row">
  <div class="col-md-8">
    <%= @items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to item.description %>

          </h4>
          <small>
            <%= item.created_at %>
              <%= link_to "Delete Item", [@list, @item], 
              method: :delete, remote: true %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>

    

