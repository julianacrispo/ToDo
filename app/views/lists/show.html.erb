 
<div class="panel panel-primary">
  <div class="panel-heading"><%= @list.name %> <span class="badge"><%= @list.items.count %> items</span>
  </div>

 <div class = "container">
    <%= form_for [@list, @item] do |f| %>
      <%= f.text_field :description, placeholder: "Add Items to List Here" %>
      <%= f.submit "Add", class: 'btn btn-success' %>
    <% end %> 
  
<%= @items.each do |item| %>
    <div class="checkbox">
      <label>
        <input type="checkbox"> <%= link_to item.description %> added <%= time_ago_in_words(item.created_at) %> ago
      </label>
    <% end %>
      </div>
    </div>
  </div>


 <%= link_to "Edit", edit_list_path, class: 'btn btn-success' %>
  <%= link_to "Delete", [@list], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    

