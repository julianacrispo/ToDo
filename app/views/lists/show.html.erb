 
<div class="panel panel-primary">
  <div class="panel-heading"><%= @list.name %> <span class="badge"><%= @list.items.count %> items</span>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr> 
      <th> Description </th>
      <th> Created At </th>
      <th> Actions </th>
    </tr>
    
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td> <%= item.description %> </td>
        <td> <%= item.created_at %> </td>
        <td>
          <%#= link_to "mark as read", root_url, class: "btn btn-success" %>
          <%= link_to "destroy", [@list, item], method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

 

 <%= link_to "Edit", edit_list_path, class: 'btn btn-success' %>
  <%= link_to "Delete", [@list], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    

